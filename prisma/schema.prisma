generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type AnnouncementsAuthor {
  email String
  name  String
}

model announcements {
  id          String              @id @default(auto()) @map("_id") @db.ObjectId
  author      AnnouncementsAuthor
  course      String
  description String
  image       String
  post_date   String
  status      String
  title       String
  url         String
  views       Int
}

model users_faculty {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  course          String
  date_registered DateTime @db.Date
  email           String   @unique
  last_login      DateTime @db.Date
  name            String
  password        String
  posts           String[]
  status          String
}

model users_student {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  course          String
  date_registered DateTime @db.Date
  email           String   @unique
  last_login      DateTime @db.Date
  name            String
  password        String
  status          String
}
